<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" version="1.0" class="in-text" default-locale="ru-RU">
  <info>
    <title>Russian GOST-like numeric (custom)</title>
    <title-short>GOST-numeric-custom</title-short>
    <id>http://www.zotero.org/styles/gost-russian-numeric-custom</id>
    <link href="http://www.zotero.org/styles/gost-russian-numeric-custom" rel="self"/>
    <category citation-format="numeric"/>
    <category field="generic-base"/>
    <updated>2025-12-09T00:00:00+00:00</updated>
    <author>
      <name>Custom ChatGPT Style</name>
    </author>
    <summary>Custom Russian numeric style with [1] citations and book/journal formatting approximating GOST.</summary>
    <language>ru-RU</language>
  </info>

  <locale xml:lang="ru">
    <terms>
      <term name="edition">изд.</term>
      <term name="page-range-delimiter">–</term>
      <term name="page">с.</term>
      <term name="pages">с.</term>
      <term name="and">и</term>
      <term name="accessed">режим доступа</term>
      <term name="in">В</term>
    </terms>
  </locale>

  <macro name="author">
    <names variable="author">
      <name form="long" initialize-with=". " delimiter=", " name-as-sort-order="all"/>
    </names>
  </macro>

  <macro name="editor">
    <names variable="editor">
      <name form="long" initialize-with=". " delimiter=", " name-as-sort-order="all"/>
    </names>
  </macro>

  <macro name="title">
    <choose>
      <if type="article-newspaper article-magazine article-journal chapter paper-conference" match="any">
        <text variable="title" quotes="false"/>
      </if>
      <else>
        <text variable="title" font-style="normal"/>
      </else>
    </choose>
  </macro>

  <macro name="place-publisher-year">
    <group delimiter=": ">
      <group delimiter=". ">
        <text variable="publisher-place"/>
        <text variable="publisher"/>
      </group>
      <date variable="issued">
        <date-part name="year"/>
      </date>
    </group>
  </macro>

  <macro name="pages">
    <group>
      <text term="page" suffix=". "/>
      <text variable="page"/>
    </group>
  </macro>

  <macro name="number-of-pages">
    <group delimiter=" ">
      <text variable="number-of-pages"/>
      <text term="pages"/>
    </group>
  </macro>

  <macro name="container-title">
    <text variable="container-title"/>
  </macro>

  <macro name="genre">
    <text variable="genre"/>
  </macro>

  <citation collapse="citation-number">
    <sort>
      <key variable="citation-number"/>
    </sort>
    <layout prefix="[" suffix="]" delimiter=",">
      <text variable="citation-number"/>
    </layout>
  </citation>

  <bibliography et-al-min="4" et-al-use-first="3" second-field-align="flush">
    <sort>
      <key variable="citation-number"/>
    </sort>
    <layout>
      <text variable="citation-number" suffix=" "/>
      <group delimiter=". ">
        <text macro="author"/>
        <text macro="title"/>
      </group>
      <choose>
        <if type="book bill report thesis" match="any">
          <group prefix=" / " delimiter=", ">
            <text macro="author"/>
          </group>
          <group prefix=". - " delimiter=" - ">
            <text macro="place-publisher-year"/>
            <text macro="number-of-pages"/>
          </group>
        </if>

        <else-if type="chapter paper-conference" match="any">
          <group prefix=" // " delimiter=". ">
            <text macro="container-title"/>
          </group>
          <group prefix=". - " delimiter=" - ">
            <text macro="place-publisher-year"/>
            <group delimiter=". ">
              <text term="pages" form="short" text-case="lowercase"/>
              <text variable="page"/>
            </group>
          </group>
        </else-if>

        <else-if type="article-journal article-magazine article-newspaper" match="any">
          <group prefix=" // " delimiter=". ">
            <text macro="container-title"/>
          </group>
          <group prefix=". – " delimiter=" – ">
            <date variable="issued">
              <date-part name="year"/>
            </date>
            <group delimiter=" ">
              <text variable="volume" prefix="N "/>
            </group>
            <group delimiter=". ">
              <text term="pages" form="short" text-case="lowercase"/>
              <text variable="page"/>
            </group>
          </group>
        </else-if>

        <else>
          <group prefix=". – " delimiter=". ">
            <text variable="URL"/>
          </group>
        </else>
      </choose>
      <text value="."/>
    </layout>
  </bibliography>
</style>
