from pathlib import Path

csl_content = """<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl"
       version="1.0"
       class="in-text"
       default-locale="ru-RU">
  <info>
    <title>Russian numeric custom (GOST-like)</title>
    <title-short>RU-numeric-custom</title-short>
    <id>http://www.zotero.org/styles/ru-numeric-custom</id>
    <link href="http://www.zotero.org/styles/ru-numeric-custom" rel="self"/>
    <category citation-format="numeric"/>
    <category field="generic-base"/>
    <updated>2025-12-09T00:00:00+00:00</updated>
    <author>
      <name>Custom ChatGPT Style</name>
    </author>
    <summary>Простой русский числовой стиль: ссылки [1], список литературы по номерам.</summary>
  </info>

  <locale xml:lang="ru-RU">
    <terms>
      <term name="page">с.</term>
      <term name="pages">с.</term>
      <term name="edition">изд.</term>
      <term name="and">и</term>
    </terms>
  </locale>

  <!-- Автор(ы) -->
  <macro name="author">
    <names variable="author">
      <name form="long" initialize-with=". " name-as-sort-order="all" delimiter=", "/>
    </names>
  </macro>

  <!-- Название -->
  <macro name="title">
    <choose>
      <if type="article-journal article-magazine article-newspaper chapter paper-conference" match="any">
        <text variable="title"/>
      </if>
      <else>
        <text variable="title"/>
      </else>
    </choose>
  </macro>

  <!-- Год -->
  <macro name="year">
    <date variable="issued">
      <date-part name="year"/>
    </date>
  </macro>

  <!-- Место и издательство -->
  <macro name="place-publisher-year">
    <group delimiter=": ">
      <group delimiter=". ">
        <text variable="publisher-place"/>
        <text variable="publisher"/>
      </group>
      <text macro="year"/>
    </group>
  </macro>

  <!-- Страницы диапазон -->
  <macro name="pages">
    <group delimiter=" ">
      <text term="pages"/>
      <text variable="page"/>
    </group>
  </macro>

  <!-- Название журнала / сборника -->
  <macro name="container">
    <text variable="container-title"/>
  </macro>

  <!-- ЦИТАТЫ В ТЕКСТЕ -->
  <citation collapse="citation-number">
    <sort>
      <key variable="citation-number"/>
    </sort>
    <layout prefix="[" suffix="]" delimiter=",">
      <text variable="citation-number"/>
    </layout>
  </citation>

  <!-- СПИСОК ЛИТЕРАТУРЫ -->
  <bibliography et-al-min="4" et-al-use-first="3" second-field-align="flush">
    <sort>
      <key variable="citation-number"/>
    </sort>
    <layout>
      <text variable="citation-number" suffix=" "/>
      <choose>
        <!-- Книги, отчёты, диссертации -->
        <if type="book bill report thesis" match="any">
          <group delimiter=". ">
            <group delimiter=" ">
              <text macro="author"/>
              <text macro="title"/>
            </group>
            <group prefix=" / " delimiter=", ">
              <text macro="author"/>
            </group>
            <group prefix=". - " delimiter=" - ">
              <text macro="place-publisher-year"/>
              <text variable="number-of-pages" suffix=" с."/>
            </group>
          </group>
        </if>

        <!-- Главы и материалы конференций -->
        <else-if type="chapter paper-conference" match="any">
          <group delimiter=". ">
            <group delimiter=" ">
              <text macro="author"/>
              <text macro="title"/>
            </group>
            <group prefix=" // " delimiter=". ">
              <text macro="container"/>
            </group>
            <group prefix=". - " delimiter=" - ">
              <text macro="place-publisher-year"/>
              <text macro="pages"/>
            </group>
          </group>
        </else-if>

        <!-- Статьи в журналах и газетах -->
        <else-if type="article-journal article-magazine article-newspaper" match="any">
          <group delimiter=". ">
            <group delimiter=" ">
              <text macro="author"/>
              <text macro="title"/>
            </group>
            <group prefix=" // " delimiter=". ">
              <text macro="container"/>
            </group>
            <group prefix=". – " delimiter=" – ">
              <text macro="year"/>
              <group delimiter=" ">
                <text variable="volume" prefix="N "/>
              </group>
              <text macro="pages"/>
            </group>
          </group>
        </else-if>

        <!-- Интернет-ресурсы и прочее -->
        <else>
          <group delimiter=". ">
            <text macro="author"/>
            <text macro="title"/>
            <text variable="URL"/>
          </group>
        </else>
      </choose>
      <text value="."/>
    </layout>
  </bibliography>
</style>
"""

path = Path("/mnt/data/ru-numeric-custom.csl")
path.write_text(csl_content, encoding="utf-8")
path
